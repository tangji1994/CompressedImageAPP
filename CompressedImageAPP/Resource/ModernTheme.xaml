<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Style x:Key="IcoFont" >
        <Setter Property="TextElement.FontFamily" Value="pack://application:,,,/Resource/Fonts/#IcoFont" />
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="TextElement.FontWeight" Value="Thin"/>
    </Style>


    <!-- 主色调 -->
    <Color x:Key="PrimaryColor">#1976D2</Color>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>

    <Color x:Key="PrimaryBorderBrushColor">#2196F3</Color>
    <SolidColorBrush x:Key="PrimaryBorderBrush" Color="{StaticResource PrimaryBorderBrushColor}"/>

    <Color x:Key="PrimaryBorderBrushColor1">#0D47A1</Color>
    <SolidColorBrush x:Key="PrimaryBorderBrush1" Color="{StaticResource PrimaryBorderBrushColor1}"/>

    <!-- 辅助色 -->
    <Color x:Key="SecondaryColor">#2ecc71</Color>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <!-- 辅助色 -->
    <SolidColorBrush x:Key="SecondaryLightBlue" Color="#03A9F4"/>
    <SolidColorBrush x:Key="ComplementaryOrange" Color="#FF9800"/>
    <SolidColorBrush x:Key="SecondaryColor2" Color="#00BCD4"/>

    <!-- 中性色 -->
    <SolidColorBrush x:Key="BackgroundGray" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="DarkText" Color="#212121"/>


    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#5C9BF7"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#3367D6"/>



    <!-- 文字色 -->
    <Color x:Key="TextColor">#333333</Color>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>

    <!-- 强调色 -->
    <Color x:Key="AccentColor">#e74c3c</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="SuccessColor1" Color="#4CAF50"/>
    <SolidColorBrush x:Key="SuccessColor" Color="#43A047"/>
    <SolidColorBrush x:Key="SuccessColor2" Color="#2E7D32"/>
    <SolidColorBrush x:Key="ErrorColor" Color="#F44336"/>
    <SolidColorBrush x:Key="ErrorColor1" Color="#E53935"/>
    <SolidColorBrush x:Key="ErrorColor2" Color="#D32F2F"/>

    <sys:Double x:Key="BigFontSize">16.0</sys:Double>
    <sys:Double x:Key="DefaultFontSize">14.0</sys:Double>
    <sys:Double x:Key="SmallFontSize">12.0</sys:Double>
    <Thickness x:Key="SmallBorderThicknessSize">0.25</Thickness>

    <!-- 示例按钮样式 -->
    <Style x:Key="ModernButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
